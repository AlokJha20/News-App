<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/white"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/idIVNews"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:background="@color/teal_700"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idTVNewsHeading"
            android:layout_toRightOf="@id/idIVNews"
            android:textColor="@color/black"
            android:text="News Heading"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="3dp"
            android:maxLines="2"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sub heading"
            android:layout_toRightOf="@id/idIVNews"
            android:layout_below="@id/idTVNewsHeading"
            android:textColor="@color/black"
            android:maxLines="2"
            android:textSize="15sp"
            android:padding="2dp"
            android:id="@+id/idTVSubTitle"
            />

        <TextView
            android:id="@+id/idTVSource"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVSubTitle"
            android:layout_toRightOf="@id/idIVNews"
            android:padding="2dp"
            android:text="News Source"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/idTVDate"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVSubTitle"
            android:layout_alignRight="@id/idTVSource"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="3dp"
            android:maxLines="1"
            android:padding="2dp"
            android:text="Date"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>